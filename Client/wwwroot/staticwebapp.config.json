{  
  "auth": {
    "rolesSource": "/api/GetRoles",
    "identityProviders": {
      "customOpenIdConnectProviders": {
      "mycustomauth": {
        "registration": {
          "clientIdSettingName": "AUTH_CLIENT_ID",
          "clientCredential": {
          "clientSecretSettingName": "AUTH_CLIENT_SECRET"
          },
          "openIdConnectConfiguration": {
          "wellKnownOpenIdConfiguration": "https://cashmore-duurkoop.eu.auth0.com/.well-known/openid-configuration"
          }
        },
        "login": {
          "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
          "scopes": [ "email", "openid", "profile" ],
          "loginParameterNames": []
          }
        }
      }
    }
  },
  "routes": [
    {
      "route": "/api/todos",
      "methods": [ "GET", "POST", "PUT", "DELETE" ],
      "allowedRoles": [ "authorised" ]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/css/*", "/js/*", "/_framework/*", "/images/*", "/*.{png,jpg,gif,ico,svg,css,js,wasm,dll,dat,json}"]
  },
  "mimeTypes": {
    ".dll": "application/octet-stream",
    ".wasm": "application/wasm",
    ".dat": "application/octet-stream",
    ".json": "application/json"
  }
}